generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["diningfm"]
}

model Episode {
  id              Int      @id @default(autoincrement())
  guid            String   @unique @db.Uuid
  title           String   @db.VarChar(64)
  publishedAt     DateTime @map("published_at")
  enclosureUrl    String   @map("enclosure_url") @db.VarChar(256)
  enclosureLength Int      @map("enclosure_length")
  enclosureType   String   @map("enclosure_type") @db.VarChar(16)
  description     String
  explicit        Boolean
  duration        String   @db.VarChar(16)
  imageUrl        String   @map("image_url") @db.VarChar(128)
  season          Int
  number          Int
  episode_type    String   @db.VarChar(16)
  spotifyId       String?  @map("spotify_id") @db.VarChar(64)
  applePodcastId  String?  @map("apple_podcast_id") @db.VarChar(64)
  youtubeId       String?  @map("youtube_id") @db.VarChar(64)
  summary         String?

  @@map("episodes")
  @@schema("diningfm")
}
